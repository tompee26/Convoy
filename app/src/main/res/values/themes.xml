<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:actionMenuTextColor">@color/colorLight</item>
        <item name="actionMenuTextColor">@color/colorLight</item>
        <item name="android:textColorSecondary">@color/colorLightSecondary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Login.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorLight</item>
        <item name="android:textColorPrimary">@color/colorLight</item>
        <item name="android:background">@color/colorLoginButton</item>
    </style>

    <style name="AppTheme.SignUp.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorLight</item>
        <item name="android:textColorPrimary">@color/colorLight</item>
        <item name="android:background">@color/colorSignUpButton</item>
    </style>

    <style name="AppTheme.ProgressDialog">
        <item name="colorAccent">@color/colorLight</item>
    </style>
</resources>